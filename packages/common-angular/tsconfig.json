{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./src",
		"target": "es5",
		"paths": {
			"@pyro/*": [
				"../../../node_modules/@ever-platform/common/src/@pyro/*"
